<%- include('partials/head') %>

  <body
    class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-rose-50 via-white to-rose-100 text-gray-800 font-sans"
  >
    <!-- Header -->
<%- include('partials/header') %>

    <!-- Main Content -->
    <main class="text-center space-y-8 w-full max-w-2xl">
      <!-- Registered Homes Section -->
      <section
        class="bg-white shadow-lg rounded-2xl p-8 border border-rose-200"
      >
        <h2 class="text-2xl font-semibold text-rose-700 mb-4">
          Your Registered Homes
        </h2>

        <!-- Homes List -->
        <% if (registeredHomes.length > 0) { %>
        <ul class="space-y-4 text-left">
          <% registeredHomes.forEach(home => { %>
          <li
            class="p-4 border border-gray-200 rounded-lg hover:bg-rose-50 transition"
          >
            <h3 class="text-lg font-semibold text-gray-800">
              <%= home.houseName %>
            </h3>
            <p class="text-gray-600">📍 <%= home.location %></p>
            <p class="text-gray-500 text-sm">$<%= home.price %> per night</p>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p class="text-gray-500 italic">
          You haven’t registered any homes yet.
        </p>
        <% } %>
      </section>

      <!-- Add Home Button -->
      <a
        href="/host/add-home"
        class="inline-block px-8 py-3 bg-rose-600 text-white font-semibold rounded-lg shadow-md hover:bg-rose-700 active:scale-95 transition-all duration-200"
      >
        ➕ Add Your Home
      </a>

      <p class="text-gray-500 text-sm">
        Start your journey as a host and share your space with travelers.
      </p>
    </main>

<%- include('partials/footer') %>