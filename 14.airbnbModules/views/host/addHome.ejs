<%- include('../partials/head') %>

<body
  class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-rose-50 via-white to-rose-100 text-gray-800 font-sans"
>
  <!-- Header -->
  <header class="text-center mb-10">
    <h1 class="text-5xl font-extrabold text-rose-700 mb-3 text-shadow-md">
      Add Your Home
    </h1>
    <p class="text-gray-600 text-lg max-w-md mx-auto">
      List your beautiful property and start hosting travelers today.
    </p>
  </header>

  <!-- Main Form -->
  <main
    class="w-full max-w-md bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-rose-200"
  >
    <form action="/host/addHome" method="POST" class="space-y-6">
      <!-- House Name -->
      <div>
        <label for="houseName" class="block text-gray-700 font-medium mb-2"
          >House Name</label
        >
        <input
          type="text"
          name="houseName"
          id="houseName"
          placeholder="Khan's House"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:border-rose-400 outline-none transition-all duration-200"
          required
        />
      </div>

      <!-- Location -->
      <div>
        <label for="location" class="block text-gray-700 font-medium mb-2"
          >Location</label
        >
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Aftabnagar, Dhaka"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:border-rose-400 outline-none transition-all duration-200"
          required
        />
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block text-gray-700 font-medium mb-2"
          >Price per night ($)</label
        >
        <input
          type="number"
          name="price"
          id="price"
          placeholder="2000 Taka"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:border-rose-400 outline-none transition-all duration-200"
          required
        />
      </div>

      <!-- Description -->
      <div>
        <label for="location" class="block text-gray-700 font-medium mb-2"
          >Description</label
        >
        <input
          type="text"
          name="description"
          id="description"
          placeholder="Short Description"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:border-rose-400 outline-none transition-all duration-200"
          required
        />
      </div>

      <!-- Image -->
      <div>
        <label for="img" class="block text-gray-700 font-medium mb-2"
          >Description</label
        >
        <input
          type="text"
          name="img"
          id="img"
          placeholder="Provide Image URL"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:border-rose-400 outline-none transition-all duration-200"
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="flex justify-center pt-2">
        <button
          type="submit"
          class="px-8 py-3 bg-rose-600 text-white font-semibold rounded-lg shadow-lg hover:bg-rose-700 active:scale-95 transition-all duration-200"
        >
          Add Home
        </button>
      </div>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>
