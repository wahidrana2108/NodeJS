<%- include('../partials/head') %>

<body
  class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-rose-50 via-white to-rose-100 text-gray-800 font-sans"
>
  <!-- Navbar -->
  <%- include('../partials/navbar') %>
  <!-- Header -->
  <%- include('../partials/header') %>

  <!-- Main Content -->
  <main class="text-center space-y-8 w-full max-w-6xl px-4">
    <!-- Registered Homes Section -->
    <section class="bg-white shadow-lg rounded-2xl p-8 border border-rose-200">
      <% if (registeredHomes.length > 0) { %>
      <!-- Card Grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center"
      >
        <% registeredHomes.forEach(home => { %>
        <div
          class="relative flex w-full max-w-[22rem] flex-col rounded-xl bg-white text-gray-700 shadow-md hover:shadow-xl transition-all duration-200"
        >
          <div
            class="relative mx-4 mt-4 overflow-hidden text-white shadow-lg rounded-xl"
          >
            <img
              src="<%= home.img %>"
              alt="<%= home.houseName %>"
              class="h-48 w-full object-cover"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"
            ></div>
          </div>

          <div class="p-6 text-left">
            <div class="flex items-center justify-between mb-3">
              <h5
                class="font-sans text-lg font-semibold text-gray-900 truncate"
              >
                <%= home.houseName %>
              </h5>
              <p class="text-rose-600 font-semibold">‡ß≥<%= home.price %></p>
            </div>

            <p class="text-gray-600 text-sm mb-3">üìç <%= home.location %></p>

            <p class="text-gray-500 text-sm leading-relaxed">
              <%= home.description %>
            </p>
          </div>

          <div class="p-6 pt-0">
            <button
              class="block w-full select-none rounded-lg bg-green-600 py-3 px-7 text-center text-sm font-bold uppercase text-white shadow-md hover:bg-green-700 active:scale-95 transition-all duration-200"
              type="button"
            >
              Book Now
            </button>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-gray-500 italic">No homes yet in your area.</p>
      <% } %>
    </section>
    <!-- see more Button -->
    <a
      href="/store/showMore"
      class="inline-block px-8 py-3 bg-rose-600 text-white font-semibold rounded-lg shadow-md hover:bg-rose-700 active:scale-95 transition-all duration-200 mb-2.5"
    >
      ‚ûï See More Home
    </a>
  </main>
</body>

<%- include('../partials/footer') %>
